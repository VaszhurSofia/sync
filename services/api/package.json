{
  "name": "@sync/api",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for API package'",
    "lint:check": "echo 'No linting configured for API package'",
    "format:check": "echo 'No formatting configured for API package'",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit --passWithNoTests",
    "test:integration": "jest --testPathPattern=__tests__/api",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:check": "echo 'Database migration check - no migrations to verify'",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "tsx src/db/reset.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "@sync/types": "file:../../packages/types",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.24.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fastify/type-provider-typebox": "^6.0.0",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  }
}
