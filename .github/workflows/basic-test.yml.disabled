name: Basic CI Test

on:
  workflow_dispatch:

jobs:
  basic-test:
    name: Basic CI Environment Test
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Basic directory check
      run: |
        echo "ğŸ” Current directory: $(pwd)"
        echo "ğŸ” Directory contents:"
        ls -la
        echo "ğŸ” Root files:"
        ls -la *.json *.md 2>/dev/null || echo "No JSON/MD files in root"
        
    - name: Check package.json
      run: |
        echo "ğŸ” Checking package.json..."
        if [ -f "package.json" ]; then
          echo "âœ… package.json exists"
          echo "ğŸ” Package.json contents (first 10 lines):"
          head -10 package.json
        else
          echo "âŒ package.json not found"
          exit 1
        fi
