{
  "info": {
    "name": "Sync API - M0 Scaffold",
    "description": "Basic API endpoints for M0 milestone",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        },
        {
          "name": "Crypto Health",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health/crypto",
              "host": ["{{baseUrl}}"],
              "path": ["health", "crypto"]
            }
          }
        }
      ]
    },
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Request Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/request-code",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "request-code"]
            }
          }
        },
        {
          "name": "Verify Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/verify-code",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "verify-code"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const response = pm.response.json();",
                  "  pm.collectionVariables.set('accessToken', response.accessToken);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Couple Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mode\": \"couple\",\n  \"coupleId\": \"123e4567-e89b-12d3-a456-426614174000\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["sessions"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const response = pm.response.json();",
                  "  pm.collectionVariables.set('sessionId', response.sessionId);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Solo Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mode\": \"solo\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["sessions"]
            }
          }
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sender\": \"userA\",\n  \"content\": \"Hello, this is a test message\",\n  \"clientMessageId\": \"123e4567-e89b-12d3-a456-426614174000\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "messages"]
            }
          }
        },
        {
          "name": "Get Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/messages",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "messages"]
            }
          }
        },
        {
          "name": "End Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/end",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "end"]
            }
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Feedback",
      "item": [
        {
          "name": "Submit Feedback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": \"happy\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/feedback",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "feedback"]
            }
          }
        }
      ]
    },
    {
      "name": "Solo to Couple",
      "item": [
        {
          "name": "Convert to Couple",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"consent\": true,\n  \"redactedSummary\": \"We discussed communication issues and want to work together on this\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/sessions/{{sessionId}}/convert-to-couple",
              "host": ["{{baseUrl}}"],
              "path": ["sessions", "{{sessionId}}", "convert-to-couple"]
            }
          }
        }
      ]
    },
    {
      "name": "Resources",
      "item": [
        {
          "name": "Get Boundary Resources",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/boundary/resources",
              "host": ["{{baseUrl}}"],
              "path": ["boundary", "resources"]
            }
          }
        }
      ]
    }
  ]
}
