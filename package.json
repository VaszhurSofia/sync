{
  "name": "sync-modes-and-flows",
  "version": "1.0.0",
  "description": "AI-powered therapy platform with couple and solo session modes",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:api && npm run build:ai && npm run build:website",
    "build:api": "cd services/api && npm run build",
    "build:ai": "cd services/ai && npm run build",
    "build:website": "cd website && npm run build",
    "start": "npm run start:api",
    "start:api": "cd services/api && npm start",
    "start:ai": "cd services/ai && npm start",
    "start:website": "cd website && npm start",
    "dev": "npm run dev:api",
    "dev:api": "cd services/api && npm run dev",
    "dev:ai": "cd services/ai && npm run dev",
    "dev:website": "cd website && npm run dev",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/api",
    "test:performance": "jest --testPathPattern=__tests__/performance",
    "test:security": "jest --testPathPattern=__tests__/security",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:load": "artillery run tests/load/load-test.yml",
    "test:stress": "artillery run tests/load/stress-test.yml",
    "test:api-contract": "jest --testPathPattern=__tests__/api-contract",
    "test:accessibility": "cd website && npm run test:accessibility",
    "test:coverage": "jest --coverage --coverageDirectory=coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "npm run lint:check && npm run lint:fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "npm run format:check && npm run format:fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "complexity:analyze": "plop complexity",
    "maintainability:analyze": "plop maintainability",
    "coverage:report": "npm run test:coverage && npm run coverage:merge",
    "coverage:merge": "istanbul-combine -d coverage/combined -r lcov -r html services/api/coverage/lcov.info services/ai/coverage/lcov.info website/coverage/lcov.info",
    "db:migrate": "cd services/api && npm run db:migrate",
    "db:migrate:check": "cd services/api && npm run db:migrate:check",
    "db:seed": "cd services/api && npm run db:seed",
    "db:reset": "cd services/api && npm run db:reset",
    "validate:env": "node scripts/validate-env.js",
    "deployment:report": "node scripts/generate-deployment-report.js",
    "deployment:test": "npm run test:deployment",
    "test:deployment": "jest --testPathPattern=__tests__/deployment",
    "openapi:validate": "echo 'OpenAPI validation skipped - swagger-codegen not available'",
    "openapi:generate": "echo 'OpenAPI generation skipped - swagger-codegen not available'",
    "docs:generate": "npm run docs:api && npm run docs:website",
    "docs:api": "cd services/api && npm run docs:generate",
    "docs:website": "cd website && npm run docs:generate",
    "clean": "npm run clean:api && npm run clean:ai && npm run clean:website",
    "clean:api": "cd services/api && npm run clean",
    "clean:ai": "cd services/ai && npm run clean",
    "clean:website": "cd website && npm run clean",
    "install:all": "npm install && cd services/api && npm install && cd ../ai && npm install && cd ../../website && npm install",
    "postinstall": "npm run install:all"
  },
  "keywords": [
    "ai",
    "therapy",
    "couple",
    "solo",
    "sessions",
    "modes",
    "flows",
    "privacy",
    "safety"
  ],
  "author": "Sync Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "artillery": "^2.0.0",
    "codecov": "^3.8.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "istanbul-combine": "^0.3.0",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "plop": "^3.1.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@sync/types": "file:packages/types",
    "@sync/ui": "file:packages/ui"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "services/**/*.ts",
      "packages/**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sync/modes-and-flows.git"
  },
  "bugs": {
    "url": "https://github.com/sync/modes-and-flows/issues"
  },
  "homepage": "https://github.com/sync/modes-and-flows#readme"
}